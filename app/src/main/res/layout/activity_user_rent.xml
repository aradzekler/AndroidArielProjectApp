<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_background"
    tools:context=".test.MainActivity">


    <TextView
        android:id="@+id/type_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="124dp"
        android:fontFeatureSettings="text"
        android:paddingRight="15dp"
        android:text="Type:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/EndPrice"
        android:layout_width="122dp"
        android:layout_height="53dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="440dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/StartPrice"
        android:layout_width="122dp"
        android:layout_height="53dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="440dp"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/bicycle_check_box"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="460dp"
        android:text="To price"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/EndPrice" />

    <Button
        android:id="@+id/SearchBtn"
        android:layout_width="141dp"
        android:layout_height="55dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="64dp"
        android:text="@string/Search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <CheckBox
        android:id="@+id/scooter_check_box"
        android:layout_width="105dp"
        android:layout_height="31dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="124dp"
        android:text="scooter"
        app:layout_constraintStart_toEndOf="@+id/bicycle_check_box"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/bicycle_check_box"
        android:layout_width="111dp"
        android:layout_height="31dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="124dp"
        android:text="bicycle"
        app:layout_constraintStart_toEndOf="@+id/type_textview"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="460dp"
        android:text="From Price"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/StartPrice" />


</androidx.constraintlayout.widget.ConstraintLayout>