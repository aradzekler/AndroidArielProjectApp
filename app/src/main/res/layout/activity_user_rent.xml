<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_background"
    tools:context=".test.MainActivity">


    <TextView
        android:id="@+id/type_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="124dp"
        android:fontFeatureSettings="text"
        android:paddingRight="15dp"
        android:text="Type:"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/EndPrice"
        android:layout_width="134dp"
        android:layout_height="40dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="500dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/StartPrice"
        android:layout_width="121dp"
        android:layout_height="40dp"
        android:layout_marginBottom="500dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="196dp"
        android:text="From Price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="516dp"
        android:text="To price"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/EndPrice" />

    <Button
        android:id="@+id/SearchBtn"
        android:layout_width="141dp"
        android:layout_height="55dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="64dp"
        android:text="@string/Search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchResult"
        android:layout_width="347dp"
        android:layout_height="351dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toTopOf="@+id/SearchBtn"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/scooter_check_box"
        android:layout_width="105dp"
        android:layout_height="31dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="124dp"
        android:text="scooter"
        app:layout_constraintStart_toEndOf="@+id/bicycle_check_box"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/bicycle_check_box"
        android:layout_width="111dp"
        android:layout_height="31dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="124dp"
        android:text="bicycle"
        app:layout_constraintStart_toEndOf="@+id/type_textview"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>